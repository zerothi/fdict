prefix=@CMAKE_INSTALL_PREFIX@
# Apparently exec_prefix is commonly placed...
exec_prefix=${prefix}
bindir=${prefix}/@CMAKE_INSTALL_BINDIR@
includedir=${prefix}/@CMAKE_INSTALL_INCLUDEDIR@
libdir=${prefix}/@CMAKE_INSTALL_LIBDIR@
moduledir=${prefix}/@CMAKE_INSTALL_INCLUDEDIR@

Name: @PROJECT_NAME@
Description: Fortran type-free variables and type-free dictionaries
Version: @PROJECT_VERSION@
URL: https://github.com/zerothi/fdict
Cflags: -I${includedir}
Libs: -L${libdir} -lfdict
